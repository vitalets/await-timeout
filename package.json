{
  "name": "await-timeout",
  "version": "0.6.0",
  "description": "A Promise-based API for setTimeout / clearTimeout",
  "author": {
    "name": "Vitaliy Potapov",
    "email": "noginsk@rambler.ru"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/vitalets/await-timeout.git"
  },
  "engines": {
    "node": ">=6"
  },
  "main": "src/index.js",
  "scripts": {
    "lint": "eslint src test scripts rollup.config.js",
    "test": "mocha test/setup test/specs",
    "test-installed": "node scripts/install-local && LIB_PATH=../.installed/node_modules/await-timeout npm t",
    "ci": "npm run lint && npm test",
    "prerelease": "npm run lint && npm test && npm run test-installed",
    "release": "npm version $VER && npm publish",
    "postrelease": "git push --follow-tags --no-verify",
    "release-patch": "VER=patch npm run release",
    "release-minor": "VER=minor npm run release"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm test",
      "pre-push": "npm run lint && npm test"
    }
  },
  "lint-staged": {
    "**/*.js": "eslint"
  },
  "devDependencies": {
    "assert-rejects": "^1.0.0",
    "eslint": "^6.6.0",
    "husky": "^3.1.0",
    "install-local": "^1.0.0",
    "lint-staged": "^9.4.3",
    "mocha": "^6.2.2",
    "sinon": "^7.5.0"
  },
  "keywords": [
    "timeout",
    "promise",
    "promise-api",
    "promises",
    "settimeout",
    "cleartimeout"
  ],
  "license": "MIT"
}
